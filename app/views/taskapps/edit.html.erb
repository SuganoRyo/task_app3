 <div class = "main_container">
<h2>スケジュール編集</h2>
 
    <%= form_for @taskapp do |f| %>
      <table>
        <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
 
        <tr>
          <th><%= f.label :start ,"開始日" %></th>
          <td><%= f.date_field :start %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end ,"終了日" %></th>
          <td><%= f.date_field :end %></td>
        </tr>
 
        <tr>
          <th><%= f.label :all ,"終日" %></th>
          <td><%= f.check_box :all %>終日の場合はチェックを入れます</td>
        </tr>
        <div class = "posts-content">
        <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td class = "memo"><%= f.text_area :memo, size: "40x10", class: "form-control" %></td>
        </tr>
        </div>
      </table>
 
      <div>
        <ul>
          <li><%= f.submit "スケジュールの編集を完了する" %></li>
          <li><%= link_to "スケジュール一覧に戻る", :taskapps %></li>
        </ul>
      </div>
      </div>
    <% end %>
