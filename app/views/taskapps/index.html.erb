 <div class = "main_container">
 <h2>スケジュール一覧</h2>
 
 <% if flash.notice %>
      <p class="notice"><%= flash.notice %></p>
  <% else %> 
      <p class = "alert"><%= flash.alert %></p>
  <% end %>
    
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>開始日</th>
          <th>終了日</th>
          <th>終日</th>
          <th>スケジュール更新日時</th>
          <th>確認</th>
          <th>編集</th>
          <th>削除</th>
        </tr>
      </thead>
 
      <tbody>
        <% @taskapps.each do |taskapp| %>
          <tr>
            <td><%= taskapp.id %></td>
            <td><%= taskapp.title %></td>
            <td><%= taskapp.start %></td>
            <td><%= taskapp.end %></td>
            <td>
            <% if taskapp.all == true %>
            ○
            <% else taskapp.all == false %>
            
            <% end %>
            </td>
            <td><%= taskapp.updated_at.to_s(:datetime_jp) %></td>
            <td>
            <%= link_to "確認", taskapp %>
          </td>
          <td>
              <%= link_to "編集", [:edit, taskapp] %>
            </td>
            <td>
              <%= link_to "削除", taskapp, method: :delete, data: { confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
        
        <% if Taskapp.count == 0 %>
        <td colspan = "9">現在登録しているスケジュールはありません</td>
        <% else %>
        
        <% end %>
      </tbody>
    </table>
 
    <p><%= link_to " スケジュール新規登録", :new_taskapp %></p>
    </div>